<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="codeasylum.ua.aircraftticket.MainActivity">

<TableRow
    android:layout_weight="5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:id="@+id/start_airport"
        android:layout_weight="1"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Spinner
        android:id="@+id/end_airport"
        android:layout_weight="1"
        android:elevation="2dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

</TableRow>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/help_text_view"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Help_message"/>

        <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

       <include layout="@layout/custom_button"/>


    </FrameLayout>


</LinearLayout>
